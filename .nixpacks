# Railway/Nixpacks configuration for Servio MVP
# This file configures the build and deployment process

# Use Node.js 20
nixpacksConfigVersion = 1
[phases.setup]
nixPkgs = ["nodejs_20", "pnpm"]

[phases.install]
cmds = ["pnpm install --frozen-lockfile"]

[phases.build]
cmds = ["pnpm build"]

[start]
cmd = "pnpm start"