{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "es6",
    "skipLibCheck": true,
    "strict": true, // Fully enabled - all TypeScript errors resolved
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUnusedLocals": false, // ESLint handles this better
    "noUnusedParameters": true, // Phase 2: Enabled - respects _ prefix convention
    "noImplicitReturns": false, // React hooks need conditional returns - handled by ESLint
    "noFallthroughCasesInSwitch": true, // Enabled - catches real bugs
    "noUncheckedIndexedAccess": true, // Enabled - arrays return T | undefined
    "strictNullChecks": true, // Phase 3: Enabled - null safety enforcement
    "strictFunctionTypes": true, // Phase 3: Enabled - function type checking
    "strictBindCallApply": true, // Phase 3: Enabled - bind/call/apply checks
    "strictPropertyInitialization": false, // Conflicts with React patterns - keep disabled
    "noImplicitThis": true, // Enabled - prevents bugs
    "alwaysStrict": true, // Enabled - good practice
    "noImplicitAny": true, // Phase 3: Enabled - implicit any detection
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "exclude": ["node_modules", ".next", "__tests__/**/*", "scripts/**/*"]
}
