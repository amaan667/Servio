{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "es6",
    "skipLibCheck": true,
    "strict": false, // Gradually enabling - see TYPE_SAFETY_PLAN.md
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUnusedLocals": false, // ESLint handles this - will enable gradually
    "noUnusedParameters": false, // ESLint handles this - will enable gradually
    "noImplicitReturns": false, // Will enable gradually
    "noFallthroughCasesInSwitch": true, // Enabled - catches real bugs
    "noUncheckedIndexedAccess": false, // Gradually enable - can cause many changes
    "strictNullChecks": false, // Will enable gradually - requires fixing null checks
    "strictFunctionTypes": false, // Will enable gradually
    "strictBindCallApply": false, // Will enable gradually
    "strictPropertyInitialization": false, // Conflicts with React patterns - keep disabled
    "noImplicitThis": true, // Enabled - prevents bugs
    "alwaysStrict": true, // Enabled - good practice
    "noImplicitAny": false, // Will enable gradually - requires fixing implicit any
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "exclude": ["node_modules", ".next", "__tests__/**/*"]
}
